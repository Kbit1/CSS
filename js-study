function enter(eng,math){
    if(eng<40 || math<40){
        console.log("ë¶ˆí•©ê²©")
    } else if (eng+math>120){
        console.log("í•©ê²©")
    } else {
        console.log("ë¶ˆí•©ê²©")
    }
}

