function enter(eng,math){
    if(eng<40 || math<40){
        console.log("불합격")
    } else if (eng+math>120){
        console.log("합격")
    } else {
        console.log("불합격")
    }
}

enter(50,50);


console.log("-----------------")

let count = 0;

// count 가 홀수만 다크모드 버튼 눌럿을때 색 변하게 짝수면 다시 색 변하게 //


document.querySelector(".badge").addEventListener("click",function(){
    count = count+1;
    if(count%2=="0"){
        console.log("짝수")
        
        document.querySelector(".bg-dark").textContent="Dark🔄"
        document.getElementById("dark").classList.add("darkmod")
    }
    else{
        console.log("홀수")

        document.querySelector(".bg-dark").textContent="Light🔄"
        document.getElementById("dark").classList.remove("darkmod")
    }
});


