function 삼육구게임(a){
    if(a%9==0){
        console.log("박수두번")
    } else if (a%3==0){
        console.log("박수")
    } else{
        console.log("통과")
    }

}

삼육구게임(9);

function 합격했냐(a,b){
    if(a>40 && b>40 && a+b>120){
        console.log("합격")
    } else{
        console.log("불합격")
    }
}

합격했냐(50,50);

let count = 0;

$(".badge").on("click",function(){
    count +=1;
    
if(count % 2 == 1){
    $(".badge").text("Light 🔄")
    $("body").css("background","black").css("color","white")
}else{
    $(".badge").text("dark 🔄")
    $("body").css("background","white").css("color","black")
}
})


let 예금액 = 60000;
let 미래예금액 = 0;

미래예금액 = 예금액*1.2*1.2;

console.log(미래예금액);

if(예금액>=50000){
    미래예금액 = 예금액*1.2*1.2
} else {
    미래예금액 = 예금액*1.15*1.15
}

console.log("-------");

