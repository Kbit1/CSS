let counts = 0;
$("#send-answer").on("click",function(){

    counts = counts+1;

    if($("#answer").val()==1335){
        alert("성공")
    }   else if($("#answer").val()!=1335){
        alert("실패")
    } else if(counts==3){
        alert("바보")
    }


})
